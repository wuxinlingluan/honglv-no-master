<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/m_card"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="@dimen/space_4"
    android:elevation="@dimen/space_16"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/space_7"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/space_4">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:paddingLeft="@dimen/space_10">

            <com.yoyiyi.honglv.ui.widget.AutoScrollText
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_0"
                android:ellipsize="marquee"
                android:gravity="center_vertical"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="标题"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_15"/>

            <TextView
                android:id="@+id/des"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:text="ceshi"
                android:textColor="@color/font_normal"
                android:textSize="@dimen/text_size_13"/>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/space_3"
                android:text="ceshi"
                android:textColor="@color/font_normal"
                android:textSize="@dimen/text_size_11"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>